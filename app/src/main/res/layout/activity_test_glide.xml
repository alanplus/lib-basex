<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <com.lib.basex.glide.GlideView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:l_glide_circle="true"
                android:layout_margin="10dp"
                app:l_glide_use_cache="DATA"
                app:l_glide_src="@drawable/gs06" />

            <com.lib.basex.glide.GlideView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:l_glide_circle="true"
                app:l_glide_stroke_width="5dp"
                app:l_glide_stroke_color="@color/green"
                android:layout_margin="10dp"
                app:l_glide_use_cache="DATA"
                app:l_glide_src="@drawable/gs06" />

            <com.lib.basex.glide.GlideView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:l_glide_circle="false"
                app:l_glide_stroke_width="5dp"
                app:l_glide_stroke_color="@color/green"
                android:layout_margin="10dp"
                app:l_glide_use_cache="DATA"
                app:l_glide_src="@drawable/gs06" />

            <com.lib.basex.glide.GlideView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:l_glide_circle="false"
                app:l_glide_radius="5dp"
                app:l_glide_use_cache="DATA"
                app:l_glide_stroke_width="3dp"
                app:l_glide_stroke_color="@color/green"
                android:layout_margin="10dp"
                app:l_glide_src="@drawable/gs06" />
        </LinearLayout>

    </ScrollView>


</layout>
