<resources>

    <attr name="l_theme_color" format="color" />

    <!-- 状态栏 颜色 字体大小 -->
    <attr name="l_status_bar_bg_color" format="color" />
    <attr name="l_status_bar_text_is_white" format="boolean" />
    <attr name="l_light_loading" format="reference" />

    <!-- 主界面 底部tab 配置 -->
    <attr name="l_home_tab_menu" format="reference" />
    <attr name="l_menu_item_text_color" format="color|reference" />

    <declare-styleable name="LBannerLayoutStyle">
        <attr name="l_selectedIndicatorColor" format="color|reference" />
        <attr name="l_unSelectedIndicatorColor" format="color|reference" />
        <attr name="l_indicatorShape" format="enum">
            <enum name="rect" value="0" />
            <enum name="oval" value="1" />
        </attr>

        <attr name="l_selectedIndicatorHeight" format="dimension|reference" />
        <attr name="l_selectedIndicatorWidth" format="dimension|reference" />

        <attr name="l_unSelectedIndicatorHeight" format="dimension|reference" />
        <attr name="l_unSelectedIndicatorWidth" format="dimension|reference" />

        <attr name="l_indicatorPosition" format="enum">
            <enum name="centerBottom" value="0" />
            <enum name="rightBottom" value="1" />
            <enum name="leftBottom" value="2" />
            <enum name="centerTop" value="3" />
            <enum name="rightTop" value="4" />
            <enum name="leftTop" value="5" />
        </attr>

        <attr name="l_indicatorSpace" format="dimension|reference" />
        <attr name="l_indicatorMargin" format="dimension|reference" />
        <attr name="l_autoPlayDuration" format="integer|reference" />
        <attr name="l_scrollDuration" format="integer|reference" />
        <attr name="l_isAutoPlay" format="boolean" />
        <attr name="l_defaultImage" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="RectangleIndicator">
        <attr name="l_ri_num" format="integer" />
        <attr name="l_ri_text_color" format="color|reference" />
        <attr name="l_ri_text_size" format="dimension" />
        <attr name="l_ri_bg_color" format="color|reference" />
        <attr name="l_ri_radius" format="dimension" />
        <attr name="l_ri_indicator_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="GlideView">
        <attr name="l_glide_circle" format="boolean" />
        <attr name="l_glide_radius" format="dimension" />
        <attr name="l_glide_corner_left" format="dimension" />
        <attr name="l_glide_corner_top" format="dimension" />
        <attr name="l_glide_corner_right" format="dimension" />
        <attr name="l_glide_corner_bottom" format="dimension" />
        <attr name="l_glide_stroke_width" format="dimension" />
        <attr name="l_glide_stroke_color" format="color|reference" />
        <attr name="l_glide_place_holder" format="reference" />
        <attr name="l_glide_error_res" format="reference" />
        <attr name="l_glide_src" format="reference" />
        <attr name="l_glide_skip_memory" format="boolean" />
        <!-- 默认true -->
        <attr name="l_glide_use_cache" format="enum">
            <enum name="ALL" value="0" />
            <enum name="NONE" value="1" />
            <enum name="DATA" value="2" />
            <enum name="RESOURCE" value="3" />
            <enum name="AUTOMATIC" value="4" />
        </attr>
    </declare-styleable>
</resources>
