<resources>

    <style name="LAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--状态栏配置 -->
        <item name="l_status_bar_bg_color">@android:color/white</item>
        <item name="l_status_bar_text_is_white">false</item>
        <!-- 主界面 底部tab 配置 -->
        <item name="l_home_tab_menu">@menu/l_home_base_menu</item>
        <item name="l_menu_item_text_color">@color/l_home_tab_text_color</item>
        <!-- 主题色 -->
        <item name="l_theme_color">@color/l_theme</item>
        <item name="l_light_loading">@drawable/ic_loading_2</item>
    </style>


    <style name="LDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LTranslateDialogStyle" parent="LDialogStyle">
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <declare-styleable name="LSmileyLoadingView">
        <!-- animation duration -->
        <attr name="l_duration" format="integer" />
        <!-- stroke width -->
        <attr name="l_strokeWidth" format="dimension" />
        <!-- stroke color -->
        <attr name="l_strokeColor" format="color" />
        <!-- animation repeat count -->
        <attr name="l_animRepeatCount" format="integer" />
    </declare-styleable>

    <!--  半透明的activity-->
    <style name="TransparentActivityStyle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!--  半透明的activity-->
        <item name="android:windowBackground">@color/transparent80</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


</resources>
