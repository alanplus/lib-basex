<resources>

    <style name="LAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="l_status_bar_bg_color">@android:color/white</item>
        <item name="l_status_bar_text_is_white">false</item>
    </style>


    <style name="LXDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <attr name="l_status_bar_bg_color" format="color" />
    <attr name="l_status_bar_text_is_white" format="boolean" />

</resources>
